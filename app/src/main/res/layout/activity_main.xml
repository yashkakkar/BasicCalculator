<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yashkakkar.calculator.MainActivity">

    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:text="@string/x"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:text="@string/del"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnRightBracket"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/btnRightBracket"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnAc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:text="@string/ac"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/close"
        app:layout_constraintTop_toBottomOf="@+id/close" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:text="@string/_1"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnAc"
        app:layout_constraintLeft_toRightOf="@+id/btnAc" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:text="@string/_2"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn1"
        app:layout_constraintLeft_toRightOf="@+id/btn1" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:text="@string/_3"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn2"
        app:layout_constraintLeft_toRightOf="@+id/btn2" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:text="@string/_4"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnSigned"
        app:layout_constraintLeft_toRightOf="@+id/btnSigned" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:text="@string/_5"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn4"
        app:layout_constraintLeft_toRightOf="@+id/btn4" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:text="@string/_6"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn5"
        app:layout_constraintLeft_toRightOf="@+id/btn5" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:text="@string/_7"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnPercent"
        app:layout_constraintLeft_toRightOf="@+id/btnPercent" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:text="@string/_8"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn7"
        app:layout_constraintLeft_toRightOf="@+id/btn7" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:text="@string/_9"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn8"
        app:layout_constraintLeft_toRightOf="@+id/btn8" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:text="@string/_0"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnDecimal"
        app:layout_constraintLeft_toRightOf="@+id/btnDecimal" />

    <Button
        android:id="@+id/btnSigned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:text="@string/plusminus"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/btnAc"
        app:layout_constraintTop_toBottomOf="@+id/btnAc" />

    <Button
        android:id="@+id/btnPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:text="@string/percentile"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/btnSigned"
        app:layout_constraintTop_toBottomOf="@+id/btnSigned" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:text="@string/divide"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/btn3"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:text="@string/mutiply"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/btn6"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:text="@string/plus"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/btn9"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:text="@string/minus"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/equal_to"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintLeft_toRightOf="@+id/equal_to"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:text="@string/decimal"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnClear"
        app:layout_constraintLeft_toRightOf="@+id/btnClear"
        app:layout_constraintVertical_bias="0.69" />

    <Button
        android:id="@+id/equal_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:text="@string/equalto"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn0"
        app:layout_constraintLeft_toRightOf="@+id/btn0" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:text="@string/clr"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/btnPercent"
        app:layout_constraintTop_toBottomOf="@+id/btnPercent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnLeftBracket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:text="@string/braceopen"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnPower"
        app:layout_constraintLeft_toRightOf="@+id/btnPower" />

    <Button
        android:id="@+id/btnRightBracket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:minHeight="60dp"
        android:minWidth="60dip"
        android:text="@string/braceclose"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnLeftBracket"
        app:layout_constraintLeft_toRightOf="@+id/btnLeftBracket" />

    <Button
        android:id="@+id/btnPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:minHeight="60dp"
        android:minWidth="60dip"
        android:text="@string/power"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/close"
        app:layout_constraintLeft_toRightOf="@+id/close" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="411dp"
        android:layout_height="200dp"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:cardCornerRadius="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.yashkakkar.calculator.CustomTextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/numberOperation"
                android:layout_alignLeft="@+id/numberOperation"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/numberOperation"
                android:layout_alignStart="@+id/numberOperation"
                android:layout_marginBottom="15dp"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/background_light"
                android:textSize="36sp"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/numberOperation" />

            <EditText
                android:id="@+id/numberOperation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="sans-serif"
                android:inputType="text|number|numberSigned|numberDecimal"
                android:textAlignment="textEnd"
                android:textColor="@android:color/background_light"
                android:textSize="30sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cardView" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
